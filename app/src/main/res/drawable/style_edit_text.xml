<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:color="@android:color/white" android:state_enabled="true" android:state_selected="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/colorBlack" />
			<stroke android:width="5dp" android:color="@color/colorSecondaryLight" />
		</shape>
	</item>

	<item android:color="@android:color/darker_gray" android:state_enabled="false">
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/gris" />
			<stroke android:width="1dp" android:color="@color/gris_claro" />
		</shape>
	</item>
	<item android:color="@android:color/black">
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/blanco" />
			<stroke android:width="1dp" android:color="@color/gris" />
		</shape>
	</item>
</selector>
